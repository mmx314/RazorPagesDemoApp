@page
@model RazorPagesDemoApp.Pages.Employees.AddModel
@{
}

<h1 class="mb-3">Add New Emploee</h1>
<form method="post">
	<div class="mb-3">
		<label class="form-label">Name</label>
		<input type="text" class="form-control" asp-for="AddEmployeeRequest.Name"/>
	</div>

	<div class="mb-3">
		<label class="form-label">Email</label>
		<input type="email" class="form-control" asp-for="AddEmployeeRequest.Email" />
	</div>

	<div class="mb-3">
		<label class="form-label">Salary</label>
		<input type="number" class="form-control" asp-for="AddEmployeeRequest.Salary" />
	</div>

	<div class="mb-3">
		<label class="form-label">DateOfBirth</label>
		<input type="date" class="form-control" asp-for="AddEmployeeRequest.DateOfBirth"/>
	</div>

	<div class="mb-3">
		<label class="form-label">Deparment</label>
		<input type="text" class="form-control" asp-for="AddEmployeeRequest.Deparment" />
	</div>

	<div class="mb-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>